<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Ranking Report - Grade <%= classLevel %></h2>
        <p class="text-muted">Term <%= term %>, Academic Year <%= year %></p>
    </div>
    <div>
        <a href="/reports/ranking/excel?class_level=<%= classLevel %>&term=<%= term %>&year=<%= year %>" 
           class="btn btn-success me-2">
            <i class="bi bi-file-earmark-excel me-2"></i>
            Export Excel
        </a>
        <a href="/reports/ranking/pdf?class_level=<%= classLevel %>&term=<%= term %>&year=<%= year %>" 
           class="btn btn-danger me-2">
            <i class="bi bi-file-earmark-pdf me-2"></i>
            Export PDF
        </a>
        <a href="/reports" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>
            Back to Reports
        </a>
    </div>
</div>

<!-- Class Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-primary"><%= classStats.totalStudents %></h3>
                <p class="card-text">Total Students</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-success"><%= classStats.studentsWithGrades %></h3>
                <p class="card-text">With Grades</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-info"><%= classStats.classAverage %>%</h3>
                <p class="card-text">Class Average</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-warning"><%= classStats.highestScore %>%</h3>
                <p class="card-text">Highest Score</p>
            </div>
        </div>
    </div>
</div>

<!-- Ranking Table -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="bi bi-trophy-fill me-2"></i>
            Student Rankings
        </h5>
    </div>
    <div class="card-body p-0">
        <% if (rankings.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Rank</th>
                            <th>Student</th>
                            <th>Admission No.</th>
                            <th>Total Marks</th>
                            <th>Average Score</th>
                            <th>Grade Points</th>
                            <th>Subjects</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% rankings.forEach(function(ranking) { %>
                            <tr>
                                <td>
                                    <% if (ranking.rank === 1) { %>
                                        <span class="badge bg-warning text-dark fs-6">
                                            <i class="bi bi-trophy-fill me-1"></i>
                                            <%= ranking.rank %>
                                        </span>
                                    <% } else if (ranking.rank <= 3) { %>
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-medal-fill me-1"></i>
                                            <%= ranking.rank %>
                                        </span>
                                    <% } else if (ranking.rank <= 5) { %>
                                        <span class="badge bg-info fs-6">
                                            <%= ranking.rank %>
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-secondary fs-6">
                                            <%= ranking.rank %>
                                        </span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <%= ranking.student.name.charAt(0).toUpperCase() %>
                                        </div>
                                        <div>
                                            <h6 class="mb-0"><%= ranking.student.name %></h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-bold text-primary">
                                        <%= ranking.student.admission_no %>
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">
                                        <%= ranking.totalMarks.toFixed(0) %>
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-bold text-primary">
                                        <%= ranking.averageScore %>%
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-bold text-info">
                                        <%= ranking.averageGradePoints.toFixed(2) %>
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">
                                        <%= ranking.subjectCount %>
                                    </span>
                                </td>
                                <td>
                                    <% 
                                        let gradeClass = 'bg-danger';
                                        if (ranking.averageScore >= 80) gradeClass = 'bg-success';
                                        else if (ranking.averageScore >= 70) gradeClass = 'bg-primary';
                                        else if (ranking.averageScore >= 60) gradeClass = 'bg-info';
                                        else if (ranking.averageScore >= 50) gradeClass = 'bg-warning text-dark';
                                    %>
                                    <span class="badge <%= gradeClass %>">
                                        <% if (ranking.averageScore >= 80) { %>A<% } %>
                                        <% if (ranking.averageScore >= 70 && ranking.averageScore < 80) { %>B<% } %>
                                        <% if (ranking.averageScore >= 60 && ranking.averageScore < 70) { %>C<% } %>
                                        <% if (ranking.averageScore >= 50 && ranking.averageScore < 60) { %>D<% } %>
                                        <% if (ranking.averageScore < 50) { %>F<% } %>
                                    </span>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-trophy display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">No Rankings Available</h4>
                <p class="text-muted">No grades found for the selected criteria.</p>
                <a href="/grades/entry?class=<%= classLevel %>&term=<%= term %>&year=<%= year %>" class="btn btn-primary">
                    <i class="bi bi-pencil-square me-2"></i>
                    Enter Grades
                </a>
            </div>
        <% } %>
    </div>
</div>

<!-- Detailed View Toggle -->
<% if (rankings.length > 0) { %>
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ul me-2"></i>
                    Detailed Subject Scores
                </h5>
            </div>
            <div class="card-body">
                <div class="accordion" id="rankingAccordion">
                    <% rankings.forEach(function(ranking, index) { %>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading<%= index %>">
                                <button class="accordion-button collapsed" type="button" 
                                        data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>">
                                    <span class="badge bg-primary me-3">#<%= ranking.rank %></span>
                                    <%= ranking.student.name %> - <%= ranking.averageScore %>% Average
                                </button>
                            </h2>
                            <div id="collapse<%= index %>" class="accordion-collapse collapse" 
                                 data-bs-parent="#rankingAccordion">
                                <div class="accordion-body">
                                    <div class="row">
                                        <% ranking.grades.forEach(function(grade) { %>
                                            <div class="col-md-4 mb-2">
                                                <div class="d-flex justify-content-between align-items-center p-2 border rounded">
                                                    <span><%= grade.subject.name %></span>
                                                    <span class="badge bg-primary"><%= grade.score %>%</span>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>
<% } %>

<style>
.avatar-sm {
    width: 40px;
    height: 40px;
    font-size: 1rem;
}

.table th {
    border: 1px solid #dee2e6;
    font-weight: 600;
}

.table td {
    border: 1px solid #dee2e6;
    vertical-align: middle;
}
</style>
