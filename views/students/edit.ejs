<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pencil-square me-2"></i>
                    Edit Student
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/students/edit/<%= student.id %>">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="admission_no" class="form-label">Admission Number</label>
                            <input type="text" class="form-control" id="admission_no" name="admission_no" 
                                   value="<%= student.admission_no %>" required>
                            <% if (errors && errors.find(e => e.param === 'admission_no')) { %>
                                <div class="text-danger small mt-1">
                                    <%= errors.find(e => e.param === 'admission_no').msg %>
                                </div>
                            <% } %>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="name" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="name" name="name" 
                                   value="<%= student.name %>" required>
                            <% if (errors && errors.find(e => e.param === 'name')) { %>
                                <div class="text-danger small mt-1">
                                    <%= errors.find(e => e.param === 'name').msg %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="class_level" class="form-label">Class Level</label>
                            <select class="form-select" id="class_level" name="class_level" required>
                                <option value="">Select Class</option>
                                <% classLevels.forEach(function(classLevel) { %>
                                    <option value="<%= classLevel %>" 
                                            <%= student.class_level === classLevel ? 'selected' : '' %>>
                                        Grade <%= classLevel %>
                                    </option>
                                <% }); %>
                            </select>
                            <% if (errors && errors.find(e => e.param === 'class_level')) { %>
                                <div class="text-danger small mt-1">
                                    <%= errors.find(e => e.param === 'class_level').msg %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/students" class="btn btn-outline-secondary me-md-2">
                            <i class="bi bi-arrow-left me-2"></i>
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-2"></i>
                            Update Student
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="bi bi-info-circle me-2"></i>
                    Student Information
                </h6>
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li><strong>Student ID:</strong> <%= student.id %></li>
                            <li><strong>Date Added:</strong> <%= new Date(student.created_at).toLocaleDateString() %></li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li><strong>Last Updated:</strong> <%= new Date(student.updated_at).toLocaleDateString() %></li>
                            <li><strong>Current Class:</strong> Grade <%= student.class_level %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
