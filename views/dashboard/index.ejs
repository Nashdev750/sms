<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-graph-up me-2"></i>
                    System Overview
                </h5>
                <p class="card-text text-muted">Current academic year: <%= currentYear %>, Term: <%= currentTerm %></p>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <% classLevels.forEach(function(classLevel) { %>
        <div class="col-md-4 mb-3">
            <div class="card stats-card">
                <div class="card-body text-center">
                    <h3 class="stats-number"><%= stats[`grade${classLevel}`].studentCount %></h3>
                    <h6 class="card-title">Grade <%= classLevel %> Students</h6>
                    <p class="card-text">
                        <small>
                            <i class="bi bi-book me-1"></i>
                            <%= stats[`grade${classLevel}`].subjectCount %> subjects
                        </small>
                    </p>
                    <div class="mt-2">
                        <span class="badge bg-light text-dark">
                            Avg: <%= stats[`grade${classLevel}`].averageScore %>%
                        </span>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-lightning-charge-fill me-2"></i>
                    Quick Actions
                </h5>
                <div class="d-grid gap-2">
                    <a href="/dashboard/select-class" class="btn btn-primary">
                        <i class="bi bi-pencil-square me-2"></i>
                        Enter Grades
                    </a>
                    <a href="/students/add" class="btn btn-outline-primary">
                        <i class="bi bi-person-plus me-2"></i>
                        Add Student
                    </a>
                    <a href="/subjects/add" class="btn btn-outline-primary">
                        <i class="bi bi-book-plus me-2"></i>
                        Add Subject
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-bar-chart-fill me-2"></i>
                    Reports & Analytics
                </h5>
                <div class="d-grid gap-2">
                    <a href="/reports" class="btn btn-success">
                        <i class="bi bi-graph-up me-2"></i>
                        View Reports
                    </a>
                    <a href="/grades/class?class=7&term=1&year=<%= currentYear %>" class="btn btn-outline-success">
                        <i class="bi bi-table me-2"></i>
                        Class Grades
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    System Information
                </h5>
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li><strong>Academic Year:</strong> <%= currentYear %></li>
                            <li><strong>Current Term:</strong> <%= currentTerm %></li>
                            <li><strong>Total Classes:</strong> <%= classLevels.length %></li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li><strong>System Status:</strong> <span class="badge bg-success">Active</span></li>
                            <li><strong>Database:</strong> <span class="badge bg-success">Connected</span></li>
                            <li><strong>Last Updated:</strong> <%= new Date().toLocaleDateString() %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
