<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Subjects Management</h2>
        <p class="text-muted">Manage subject records and information</p>
    </div>
    <a href="/subjects/add" class="btn btn-primary">
        <i class="bi bi-book-plus me-2"></i>
        Add Subject
    </a>
</div>

<!-- Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" action="/subjects" class="row g-3">
            <div class="col-md-4">
                <label for="class_level" class="form-label">Filter by Class</label>
                <select class="form-select" id="class_level" name="class_level">
                    <option value="">All Classes</option>
                    <% classLevels.forEach(function(classLevel) { %>
                        <option value="<%= classLevel %>" <%= selectedClass === classLevel ? 'selected' : '' %>>
                            Grade <%= classLevel %>
                        </option>
                    <% }); %>
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="bi bi-funnel me-1"></i>
                    Filter
                </button>
                <a href="/subjects" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>
                    Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Subjects Table -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="bi bi-book-fill me-2"></i>
            Subjects List
            <span class="badge bg-primary ms-2"><%= subjects.length %></span>
        </h5>
    </div>
    <div class="card-body p-0">
        <% if (subjects.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Subject Name</th>
                            <th>Class Level</th>
                            <th>Date Added</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% subjects.forEach(function(subject) { %>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <i class="bi bi-book"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0"><%= subject.name %></h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        Grade <%= subject.class_level %>
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <%= new Date(subject.created_at).toLocaleDateString() %>
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/subjects/edit/<%= subject.id %>" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                onclick="confirmDelete(<%= subject.id %>, '<%= subject.name %>')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-book display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">No Subjects Found</h4>
                <p class="text-muted">
                    <% if (selectedClass) { %>
                        No subjects found for Grade <%= selectedClass %>.
                    <% } else { %>
                        No subjects have been added yet.
                    <% } %>
                </p>
                <a href="/subjects/add" class="btn btn-primary">
                    <i class="bi bi-book-plus me-2"></i>
                    Add First Subject
                </a>
            </div>
        <% } %>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete subject <strong id="subjectName"></strong>?</p>
                <p class="text-danger">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    This action cannot be undone and will also delete all associated grades.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete Subject</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-sm {
    width: 40px;
    height: 40px;
    font-size: 1rem;
}
</style>

<script>
function confirmDelete(subjectId, subjectName) {
    document.getElementById('subjectName').textContent = subjectName;
    document.getElementById('deleteForm').action = '/subjects/delete/' + subjectId;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script>
